<div class="other-post zero-out">
    <div class="post-card-image zero-out">
        {{#if feature_image}}
        <a class="post-card-image-link" href="{{url}}">
            <img class="post-card-image" srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}" alt="{{title}}" />
        </a>
        {{/if}}
    </div>

    <div class="other-post-content">
        {{tags limit="1"}}

        <a href="{{url}}">
            <h2 class="post-card-title">{{title}}</h2>
        </a>

        <div class="other-post-byline">
            
            {{authors}}
            
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
        </div>

        <p>{{excerpt}}</p>
    </div>

</div>