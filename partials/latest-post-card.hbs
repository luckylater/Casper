<div class="latest-post-card margin-zero padding-zero">
            <div class="post-card-byline-tag margin-zero padding-zero">
                    {{#get "tags" limit="1"}}
                    {{tags}}
                    {{/get}}
            </div>

            <header class="post-card-header margin-zero padding-zero">
                <a href="{{url}}">
                    <h2 class="post-card-title">{{title}}</h2>
                </a>
            </header>

            <div class="post-card-byline-content margin-zero padding-zero">
                <span>
                    {{authors}}
                </span>               
            </div>
</div>
        