<article
    class="featured-post-card {{post_class}}">

    {{#if feature_image}}
    <a href="{{url}}" class="post-card-image-link">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="featured-image" srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
            src="{{img_url feature_image size="m"}}" alt="{{title}}" />
    </a>
    {{/if}}

    <div class="post-card-content">
        {{tags limit="3" separator="|"}}

        <h1>{{title}}</h1>

        <div class="other-post-byline">

            {{#has author="count:>2"}}
            <a class="author-name">Multiple Authors</a>
            {{else}}           
            <span class="author-name">{{authors separator=" and "}}</span>              
            {{/has}}

            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>

        </div>

        <section class="post-card-excerpt">
            {{#if feature_image}}
            <p>{{excerpt words="30"}}</p>
            {{else}}
            <p>{{excerpt words="44"}}</p>
            {{/if}}
        </section>

    </div>{{!--/.post-card-content--}}

</article>